{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "cd ./star-hit-game && npm install && npm install @azure/cosmos && npm install react-scripts && npm install nodemailer",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "cd ./star-hit-game && npm start"
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat"
			]
    },
    "codespaces": {
        "openFiles": [
          "src/App.js"
        ]
      }
    },
    "portsAttributes": {
      "3000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [3000]
  }
  
